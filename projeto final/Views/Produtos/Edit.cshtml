@*@model projeto_final.Models.Produto*@
@model projeto_final.Models.ViewModels.ProdutoFormViewModel

@{
    ViewData["Title"] = "Edit";

    // cria as listas dos selects
    var listCategorias = new SelectList(Model.Categorias, "Id", "Nome");
    var listMarcas = new SelectList(Model.Marcas, "Id", "Nome");
}

<h2>Edit</h2>

<h4>Produto</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Produto.Id" />
            <div class="form-group">
                <label asp-for="Produto.Nome" class="control-label"></label>
                <input asp-for="Produto.Nome" class="form-control" />
                <span asp-validation-for="Produto.Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Produto.CategoriaId" class="control-label"></label>
                <select asp-for="Produto.CategoriaId"
                        asp-items="@(listCategorias)"
                        class="form-control">
                    <option value="">Selecione</option>
                </select>
                <span asp-validation-for="Produto.CategoriaId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Produto.MarcaId" class="control-label"></label>
                <select asp-for="Produto.MarcaId"
                        asp-items="@(listMarcas)"
                        class="form-control">
                    <option value="">Selecione</option>
                </select>
                <span asp-validation-for="Produto.MarcaId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Produto.Preco" class="control-label"></label>
                <input asp-for="Produto.Preco" class="form-control" />
                <span asp-validation-for="Produto.Preco" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Produto.Descricao" class="control-label"></label>
                <input asp-for="Produto.Descricao" class="form-control" />
                <span asp-validation-for="Produto.Descricao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Produto.Desconto" class="control-label"></label>
                <input asp-for="Produto.Desconto" class="form-control" />
                <span asp-validation-for="Produto.Desconto" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Produto.Estoque" class="control-label"></label>
                <input asp-for="Produto.Estoque" class="form-control" />
                <span asp-validation-for="Produto.Estoque" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
